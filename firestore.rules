rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regras de Usuários (já corrigidas, sem alterações)
    match /usuarios/{userId} {
      allow list, get: if request.auth != null;
      allow create, update, delete: if request.auth.token.perfil == 'admin';
    }

    // --- ESTE BLOCO FOI CORRIGIDO PARA INCLUIR SUB-COLEÇÕES ---
    // Clientes e TODAS as suas sub-coleções (processos, observações, historico, etc.)
    match /clientes/{clienteId}/{document=**} {
      // Qualquer usuário autenticado pode ler e escrever nos documentos de clientes
      // e em todos os documentos dentro das suas sub-coleções.
      allow read, write: if request.auth != null;
    }
    // --- FIM DA CORREÇÃO ---

    // Agendamentos (sem alterações)
    match /agendamentos/{agendamentoId} {
      allow read, write: if request.auth != null;
    }

    // Notificações (sem alterações)
    match /notificacoes/{notificationId} {
      allow read, write: if request.auth != null 
                         && request.auth.uid == resource.data.usuarioId;
    }
  }
}