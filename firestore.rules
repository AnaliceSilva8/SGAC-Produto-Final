rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que usuários autenticados gerenciem seus próprios perfis
    match /usuarios/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Permite que usuários autenticados gerenciem clientes, observações,
    // documentos, processos e o histórico.
    match /clientes/{clientId} {
      allow read, write: if request.auth != null;
    }

    match /observacoes/{obsId} {
      allow read, write: if request.auth != null;
    }

    match /processos/{processoId} {
        allow read, write: if request.auth != null;
    }

    // REGRA CORRIGIDA E COMPLETA PARA O HISTÓRICO
    match /historicoCliente/{logId} {
      // Permite que qualquer usuário autenticado crie e leia o histórico.
      // Ninguém pode editar ou apagar para manter a integridade.
      allow read, create: if request.auth != null;
    }
  }
}
