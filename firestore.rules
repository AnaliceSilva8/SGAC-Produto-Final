rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra de Usuários (Mantida)
    match /usuarios/{userId} {
      allow list, get: if request.auth != null;
      allow create, update, delete: if request.auth.token.perfil == 'admin';
    }

    // Clientes e TODAS as suas sub-coleções (Mantida)
    match /clientes/{clienteId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Agendamentos (Mantida)
    match /agendamentos/{agendamentoId} {
      allow read, write: if request.auth != null;
    }

    // --- REGRA DE NOTIFICAÇÕES CORRIGIDA ---
    match /notificacoes/{notificationId} {
      
      // Permite que qualquer usuário logado LEIA (liste) as notificações.
      allow get, list: if request.auth != null;

      // Impede que usuários normais criem, editem ou apaguem a notificação principal.
      // Apenas o backend (que usa credenciais de admin) pode fazer isso.
      allow create, update, delete: if false;

      // Regra para a subcoleção de status de cada usuário
      match /statusPorUsuario/{userId} {
        // Permite que o usuário leia e escreva (para marcar como lida/apagada)
        // APENAS no seu próprio documento de status. Isso é seguro.
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}