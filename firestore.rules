rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ... (regras de usuarios e clientes sem alteração) ...

    match /processos/{processoId} {
      allow read, write: if request.auth != null;

      // Regra para a timeline (histórico)
      match /historico/{historicoId} {
        allow read, write: if request.auth != null;
      }
      
      // NOVA REGRA ADICIONADA AQUI
      match /documentos/{documentoId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // ... (restante das regras sem alteração) ...
  }
}